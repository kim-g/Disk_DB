procedure TReports.RemNum;
var
  TotalDisks:integer;
begin
with Query do
  begin
  SQL.Clear;
  SQL.Add('SELECT COUNT([Номер в каталоге]) AS NDisk');
  SQL.Add('FROM Список_дисков;');
  Open;
  TotalDisks:=FieldByName('NDisk').AsInteger;
  end;
end;

end.
