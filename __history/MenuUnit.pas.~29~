unit MenuUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Data.Win.ADODB, Vcl.Grids,
  Vcl.DBGrids, Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.Imaging.jpeg, PNGImage;

type
  TNewDisk = record
    Title:Cardinal;
    Title_Text:string;
    Video:Cardinal;
  end;

  THistory = class(TStringList)
    FileName:string;
    procedure AddLine(Line: string);
    procedure AddList(List: TStringList);
    procedure Load;
    procedure Save;
  end;

  TForm1 = class(TForm)
    DB: TADOConnection;
    Image1: TImage;
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Bevel1: TBevel;
    Button4: TButton;
    Button5: TButton;
    Button6: TButton;
    Bevel2: TBevel;
    Button7: TButton;
    procedure Button7Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button6Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  Canceled:boolean;
  NewDisk:TNewDisk;
  SQL_History:THistory;

implementation

{$R *.dfm}

uses SearchUnit, AdminUnit, AddTitle, AddVideo;

procedure TForm1.Button1Click(Sender: TObject);
begin
SearchForm.ShowModal;
end;

procedure TForm1.Button4Click(Sender: TObject);
begin
if AddTitleForm.AddDisk_AddTitle then
  if AddVideoForm.AddDisk_AddVideo then

    ShowMessage(IntToStr(NewDisk.Title));
end;

procedure TForm1.Button6Click(Sender: TObject);
begin
AdminForm.Show;
end;

procedure TForm1.Button7Click(Sender: TObject);
begin
Application.Terminate;
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
SQL_History:=THistory.Create;
SQL_History.FileName:='SQL.log';
SQL_History.Load;
end;

{ THistory }

procedure THistory.AddLine(Line: string);
begin
Add('');
Add('/*'+DateTimeToStr(Now)+'*/');

  Add(Line);

Save;
end;

procedure THistory.AddList(List: TStringList);
var
  i:integer;
begin
Add('');
Add('/*'+DateTimeToStr(Now)+'*/');

for i := 0 to List.Count-1 do
  Add(List[i]);

Save;
end;

procedure THistory.Load;
begin
LoadFromFile(FileName);
end;

procedure THistory.Save;
begin
SaveToFile(FileName);
end;

end.
